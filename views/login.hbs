<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      
      <form action="/users/login" method="post">
        <div class="mb-3">
          <label for="email" class="mb-2 fs-5">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required="true">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2 fs-5">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required="true">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
        <a href="/auth/facebook" class="btn btn-info btn-block">Facebook Login</a>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>